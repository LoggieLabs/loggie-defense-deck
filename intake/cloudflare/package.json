{
  "name": "@omnituum/secure-intake-cloudflare",
  "version": "0.1.0",
  "description": "Cloudflare Pages + D1 backend for encrypted intake submissions",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "wrangler pages dev public --d1 DB=intake-db --local",
    "deploy": "wrangler pages deploy public",
    "db:init": "wrangler d1 execute intake-db --file migrations/0001_create_intake_requests.sql --local",
    "db:init:remote": "wrangler d1 execute intake-db --file migrations/0001_create_intake_requests.sql --remote",
    "db:migrate": "wrangler d1 execute intake-db --file migrations/0002_add_admin_workflow.sql --local",
    "db:migrate:remote": "wrangler d1 execute intake-db --file migrations/0002_add_admin_workflow.sql --remote",
    "bootstrap": "node scripts/bootstrap.mjs",
    "smoke": "node scripts/smoke-post.mjs",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "typescript": "^5.5.0",
    "wrangler": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
